<!DOCTYPE html>
<html>
<head>
    <title>Edit Employee</title>
    <link rel="stylesheet" href="/add.css">
</head>
<body>

<div class="form-container">
    <h2>Edit Employee</h2>

    <form method="POST" action="/edit/<%= employee.id %>">

        <div class="form-group">
            <label>Name *</label>
            <input type="text" name="name" value="<%= employee.name %>" required>
        </div>

        <div class="form-group">
            <label>Gender *</label>
            <div class="radio-group">
                <label>
                    <input type="radio" name="gender" value="Male" <%= employee.gender === 'Male' ? 'checked' : '' %> required>
                    Male
                </label>
                <label>
                    <input type="radio" name="gender" value="Female" <%= employee.gender === 'Female' ? 'checked' : '' %>>
                    Female
                </label>
            </div>
        </div>

        <div class="form-group">
            <label>Department *</label>
            <select name="department" required>
                <option value="HR" <%= employee.department.includes('HR') ? 'selected' : '' %>>HR</option>
                <option value="Sales" <%= employee.department.includes('Sales') ? 'selected' : '' %>>Sales</option>
                <option value="Finance" <%= employee.department.includes('Finance') ? 'selected' : '' %>>Finance</option>
                <option value="Engineering" <%= employee.department.includes('Engineering') ? 'selected' : '' %>>Engineering</option>
                <option value="Others" <%= employee.department.includes('Others') ? 'selected' : '' %>>Others</option>
            </select>
        </div>

        <div class="form-group">
            <label>Basic Salary (â‚¹) *</label>
            <input type="number" name="basicSalary" value="<%= employee.basicSalary %>" min="0" required>
        </div>

        <div class="button-group">
            <a href="/" class="cancel-btn">Cancel</a>
            <button type="submit" class="submit-btn">Update</button>
        </div>

    </form>
</div>

</body>
</html>
